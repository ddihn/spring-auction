<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kopo.auction.mapper.UserMapper">
    <select id="findAll" resultType="kopo.auction.domain.User">
        SELECT * FROM users
    </select>

    <select id="findUsernameById" parameterType="long" resultType="string">
        SELECT username FROM users WHERE id = #{id}
    </select>

    <select id="findByUsername"
            parameterType="string"
            resultType="kopo.auction.domain.User">
        SELECT *
        FROM users
        WHERE username = #{username}
    </select>

    <insert id="insert"
            parameterType="kopo.auction.domain.User"
            useGeneratedKeys="true"
            keyProperty="id"
            keyColumn="id">
        INSERT INTO users (username, email, password, role)
        VALUES (#{username}, #{email}, #{password}, #{role})
    </insert>

</mapper>
